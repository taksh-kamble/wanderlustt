<% layout('layouts/boilerplate') -%>
<script>
  let mapToken="<%=process.env.MAP_TOKEN%>"
  let coordinates = <%- JSON.stringify(reqListing.geometry.coordinates) %>;

</script>
<body class="bg-light d-flex flex-column min-vh-100">

  <div class="container py-5 flex-grow-1">

    <!-- Title -->
    <h3 class="mb-5 fw-bold text-center" style="font-size: 2rem;">
      <%= reqListing.title %>
    </h3>

    <!-- Two-column layout -->
    <div class="row justify-content-center g-4">
      
      <!-- LEFT: Listing Details -->
      <div class="col-md-5">
        <div class="bg-white rounded shadow-sm p-3 mb-4 text-center">

          <!-- ✅ FIXED IMAGE DISPLAY -->
          <% if (reqListing.image && reqListing.image.url) { %>
            <img 
              src="<%= reqListing.image.url %>" 
              alt="Listing Image" 
              class="img-fluid rounded mb-3"
              style="max-height: 350px; object-fit: cover;"
            >
          <% } else if (typeof reqListing.image === 'string') { %>
            <img 
              src="<%= reqListing.image %>" 
              alt="Listing Image" 
              class="img-fluid rounded mb-3"
              style="max-height: 350px; object-fit: cover;"
            >
          <% } else { %>
            <img 
              src="https://via.placeholder.com/600x400?text=No+Image" 
              alt="No Image Available" 
              class="img-fluid rounded mb-3"
              style="max-height: 350px; object-fit: cover;"
            >
          <% } %>

          <div class="text-start" style="font-size: 1rem; line-height: 1.6;">
            <p><b>Owned by:</b> <%= reqListing.owner.username %></p>
            <p><b>Description:</b> <%= reqListing.description %></p>
            <p><b>Price:</b> ₹<%= reqListing.price %></p>
            <p><b>Location:</b> <%= reqListing.location %></p>
            <p><b>Country:</b> <%= reqListing.country %></p>
          </div>
        </div>

        <% if (currUser && reqListing.owner._id.equals(currUser._id)) { %>
          <div class="d-flex justify-content-center gap-2">
            <a href="/listings/<%= reqListing._id %>/edit" class="btn btn-warning px-4">Edit</a>
            <form method="POST" action="/listings/<%= reqListing._id %>?_method=DELETE">
              <button type="submit" class="btn btn-danger px-4">Delete</button>
            </form>
          </div>
        <% } %>
      </div>

      <!-- RIGHT: Reviews -->
      <div class="col-md-6">
        
        <% if (currUser) { %>
        <!-- Review Form -->
        <div class="bg-white rounded shadow-sm p-4 mb-4">
          <h5 class="mb-3 fw-bold">Leave a Review</h5>
          <form class="needs-validation" action="/listings/<%= reqListing._id %>/reviews" method="POST" novalidate>
            <div class="mb-3">
              <label for="rating" class="form-label"><b>Rating:</b> <span id="ratingValue">3</span></label>
              <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]" value="3" 
                oninput="document.getElementById('ratingValue').innerText = this.value;">
            </div>
            <div class="mb-3">
              <label for="comment" class="form-label"><b>Comment:</b></label>
              <textarea name="review[comment]" id="comment" rows="3" class="form-control" placeholder="Write your review..." required></textarea>
              <div class="invalid-feedback">Please write a comment.</div>
            </div>
            <button type="submit" class="btn btn-primary w-100">Submit Review</button>
          </form>
        </div>
        <% } %>

        <!-- All Reviews -->
        <div class="bg-white rounded shadow-sm p-3">
          <h5 class="mb-3 text-center fw-bold">All Reviews</h5>
          <% if (reqListing.reviews.length === 0) { %>
            <p class="text-muted text-center small">No reviews yet. Be the first to leave one!</p>
          <% } else { %>
            <div class="d-flex flex-column gap-2">
              <% for (let review of reqListing.reviews) { %>
                <div class="border rounded-3 p-2 bg-light">
                  <div class="d-flex justify-content-between align-items-center mb-1">
                    <span class="fw-semibold text-primary small">
                      <%= review.author.username || "Anonymous" %>
                    </span>
                    <span class="badge bg-warning text-dark" style="font-size: 0.8rem;">
                      <%= review.rating %> ⭐
                    </span>
                  </div>

                  <p class="mb-1 text-secondary small"><%= review.comment %></p>

                  <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                      <%= new Date(review.createdAt).toLocaleDateString('en-IN', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                    </small>

                    <% if (currUser && (currUser._id.equals(review.author._id) || currUser._id.equals(reqListing.owner._id))) { %>
                      <form method="POST" action="/listings/<%= reqListing._id %>/reviews/<%= review._id %>?_method=DELETE" class="m-0">
                        <button type="submit" class="btn btn-sm btn-outline-danger py-0 px-2" style="font-size: 0.8rem;">
                          <i class="bi bi-trash"></i> Delete
                        </button>
                      </form>
                    <% } %>
                  </div>
                </div>
              <% } %>
            </div>
          <% } %>
        </div>
        <div class="mt-4">
          <h5>Where you'll be</h5>
          <div id="map"></div>
        </div>
        
         
      </div>
    </div>
  </div>

</body>
<script src="/js/map.js"></script>
